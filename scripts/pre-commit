#!/bin/bash

# Git pre-commit hook for Terraform formatting
# Automatically runs terraform fmt on staged .tf files

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}üîß Running terraform fmt on staged files...${NC}"

# Check if terraform is available
if ! command -v terraform &> /dev/null; then
    echo -e "${RED}‚ùå Terraform is not installed or not in PATH${NC}"
    exit 1
fi

# Get list of staged .tf files
STAGED_TF_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.tf$' || true)

if [ -z "$STAGED_TF_FILES" ]; then
    echo -e "${GREEN}‚úÖ No .tf files to format${NC}"
    exit 0
fi

echo -e "${YELLOW}üìù Formatting files:${NC}"
echo "$STAGED_TF_FILES"

# Run terraform fmt on terraform directory
if [ -d "terraform" ]; then
    cd terraform
    terraform fmt
    cd ..
else
    echo -e "${RED}‚ùå terraform/ directory not found${NC}"
    exit 1
fi

# Check if any .tf files were changed by fmt
CHANGED_FILES=$(git diff --name-only | grep '\.tf$' || true)

if [ -n "$CHANGED_FILES" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Terraform fmt made changes to:${NC}"
    echo "$CHANGED_FILES"
    echo -e "${YELLOW}üìã Please add the formatted files and commit again:${NC}"
    echo -e "${YELLOW}   git add .${NC}"
    echo -e "${YELLOW}   git commit${NC}"
    exit 1
fi

echo -e "${GREEN}‚úÖ All Terraform files are properly formatted${NC}"
exit 0